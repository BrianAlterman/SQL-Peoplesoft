--Count of Disabled Employees as of VARIABLE_DATE
SELECT
    CASE
        WHEN emp.disabled = 'Y'        THEN
            'Disabled'
        WHEN emp.disabled_vet = 'Y'    THEN
            'Disabled'
        ELSE
            'Not Disabled'
    END AS "Disabled",
    COUNT(jobs.emplid)
FROM
    ps_job           jobs,
    ps_ac_all_empls  emp
WHERE
        jobs.per_org = 'EMP'
    AND jobs.emplid = emp.emplid (+)
    AND jobs.empl_status IN ( 'A', 'L', 'P' )
    AND jobs.action_reason <> 'ACQ'
    AND jobs.effseq = (
        SELECT
            MAX(jobs3.effseq)
        FROM
            ps_job jobs3
        WHERE
                jobs.emplid = jobs3.emplid
            AND jobs3.effdt = jobs.effdt
    )
    AND jobs.effdt = (
        SELECT
            MAX(jobs2.effdt)
        FROM
            ps_job jobs2
        WHERE
                jobs.emplid = jobs2.emplid
            AND jobs2.effdt <= :as_of_date
    )
GROUP BY
    CASE
        WHEN emp.disabled = 'Y'        THEN
            'Disabled'
        WHEN emp.disabled_vet = 'Y'    THEN
            'Disabled'
        ELSE
            'Not Disabled'
    END;
